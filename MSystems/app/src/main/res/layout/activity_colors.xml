<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Colors">

    <ImageView
        android:id="@+id/color_gr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/color_bl"
        android:onClick="onClickGr"
        android:src="@color/my_green"/>
    <ImageView
        android:id="@+id/color_bl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/color_gr"
        app:layout_constraintEnd_toEndOf="@id/color_gr"
        app:layout_constraintStart_toStartOf="@id/color_gr"
        app:layout_constraintBottom_toTopOf="@id/color_bck"
        android:onClick="onClickBl"
        android:src="@color/logo"/>
    <ImageView
        android:id="@+id/color_bck"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/color_gr"
        app:layout_constraintEnd_toEndOf="@id/color_gr"
        app:layout_constraintTop_toBottomOf="@id/color_bl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onClickBack"
        android:src="@color/baclkgr"/>

</androidx.constraintlayout.widget.ConstraintLayout>